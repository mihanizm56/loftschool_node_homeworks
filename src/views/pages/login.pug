extends ../_template

block variables
  - var title = 'Login page'

block content
  header.header
    .container.header__container
      .header__top
        a(href="/login").title-name Архипов
        a(href="/logout").title-name Выйти
        .header__social
          ul.social
            each item in social
              li.social__item
                a.social__link(href="http://")
                  i(class=`fab ${item}`)

      form(action="/login" method="POST").form-login
        if (msglogin)
          .status= msglogin
        .form-login__line
          label.form-login__label(for="") Привет,
          input.form-login__input(type="text" name="username" placeholder="E-MAIL")
        .form-login__line
          input.form-login__input(type="password" name="password" placeholder="Пароль")
        .form-login__line
          button(type="submit").form-login__button Войти